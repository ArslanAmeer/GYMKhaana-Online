<div class="card ml-4 mt-3">
    <div class="card-header text-center bg-dark lighten-1 white-text">Mark Attandance</div>
    <div class="card-body">
        <p class="card-text">
            @using (Html.BeginForm("MarkAttandance", "Attandance", FormMethod.Post, new { enctype = "plain-text" }))
            {
                @Html.HiddenFor(m => m.Id, new { ViewBag.id })
                <div class="form-group">
                    @Html.LabelFor(m => m.DateTime)
                    @Html.TextBoxFor(m => m.DateTime, "", new { @class = "form-control", type = "date" })
                </div>
                <div class="form-group">
                    @Html.DropDownList("os", (IEnumerable<SelectListItem>)ViewBag.OSList, "- Mark Attandance -", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark-green"><span class="fa fa-check-square-o"></span>&nbsp;Mark Attandance</button>
                </div>
            }

        </p>
    </div>
</div>




