@model FinalProjectClasses.GymMngmnt.Payment
@{
    ViewBag.Title = "SubmitPayment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 ml-2 mt-3">
    <div class="card">
        <div class="card-header text-center bg-dark lighten-1 white-text">Payment</div>
        <div class="card-body">
            @using (Html.BeginForm("SubmitPayment", "Payment", FormMethod.Post, new { enctype = "plain-text" }))
            {
                @Html.HiddenFor(m => m.Id, new { ViewBag.id })
                <div class="md-form form-sm">
                    <i class="fa fa-sort-numeric-asc fa-lg prefix"></i>
                    @Html.TextBoxFor(m => m.RollNo, "", new { @class = "form-control", id = "input-1", type = "number" })
                    @Html.LabelFor(m => m.RollNo, new { @for = "input-1" })
                </div>
                <div class="md-form form-sm">
                    <i class="fa fa-user fa-lg prefix"></i>
                    @Html.TextBoxFor(m => m.Name, "", new { @class = "form-control", id = "input-2", type = "text" })
                    @Html.LabelFor(m => m.Name, new { @for = "input-2" })
                </div>
                <div class="md-form form-sm">
                    <i class="fa fa-calendar fa-lg prefix"></i>
                    @Html.TextBoxFor(m => m.FeeDate, "", new { @class = "form-control", id = "input-3", type = "date" })

                </div>
                <div class="md-form form-sm">
                    <i class="fa fa-money fa-lg prefix"></i>
                    @Html.TextBoxFor(m => m.PaidAmount, "", new { @class = "form-control", id = "input-4", type = "number" })
                    @Html.LabelFor(m => m.PaidAmount, new { @for = "input-4" })
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-deep-orange">Submit Fee &nbsp;<span class="fa fa-send"></span></button>
                </div>

            }


        </div>
    </div>
</div>


