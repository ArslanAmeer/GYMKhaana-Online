@model FinalProjectClasses.GymMngmnt.Video
@{
    ViewBag.Title = "AddVideos";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddVideos</h2>
@using (Html.BeginForm("AddVideos", "VideoandImages", FormMethod.Post, new { enctype = "plain-text" }))
{
    <div class="col-lg-12 mt-2">
        <div class="card">
            <div class="card-header text-center bg-dark lighten-1 white-text">Adding New Videos Url Panel</div>
            <div class="card-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.VideoUrl)
                    @Html.TextBoxFor(m => m.VideoUrl, new { @class = "form-control", placeholder = "Past Url Here (ctrl+v)" })
                </div>
                <div class="form-group">
                    <select class="form-control" name="AddDays">
                        <option value="0" selected="selected">- Select Days -</option>
                        <option value="1">Monday</option>
                        <option value="2">Tuesday</option>
                        <option value="3">Wednesday</option>
                        <option value="4">Thursday</option>
                        <option value="5">Friday</option>
                        <option value="6">Saturday</option>
                        <option value="7">Sunday</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Add Video</button>
            </div>
        </div>
    </div>
}



