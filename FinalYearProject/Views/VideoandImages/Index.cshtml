@model IEnumerable<FinalProjectClasses.GymMngmnt.Video>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 mt-2">
    <div class="card">
        <div class="card-header text-center bg-dark lighten-1 white-text">Videos Details Panel</div>
        <div class="card-body">
            <table class="table table-hover table-striped">
                <thead>
                    <tr class="bg-dark white-text text-center">
                        <th>Id</th>
                        <th>VideoUrl</th>
                        <th>Video day</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var v in Model)
                    {
                        <tr class="text-center">
                            <td>@v.Id</td>
                            <td>@v.VideoUrl</td>
                            <td>@v.AddDays</td>
                            <td>
                                <a href="#myModal"><span class="fa fa-remove text-danger"></span></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>